@model Final_Web.Models.Socio
@{
    ViewBag.Title = "Afiliados";
}





<div class=" container">

    <div class="row" style="padding-top:50px;">


        <div class="col-6">
            @Html.ActionLink("Agregar Afiliados","agregarAfiliados", "",new {@class = "btn btn-success btn-lg" })

        </div>


        <div class="col-6">

            @using (Html.BeginForm("verAfiliados", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
         
                        <div class="styleh2">
                            <h2>Seleccione el Socio</h2>
                        </div>
                    
                    <hr />


                    @Html.DropDownListFor(m => m.Id, ViewBag.Socios as SelectList, "Seleccione el integrante", new { @class = "control-label col-md-2" })


                    <div class="form-group " style="padding-top:20px;">
                        <div class=" col-md-offset-3">
                            <input type="submit" value="Consultar Afiliados" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>



</div>